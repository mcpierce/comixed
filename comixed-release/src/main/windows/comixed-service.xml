<service>
    <id>comixed</id>
    <name>ComiXed</name>
    <description>The ComiXed digital comic book management system v3.1-SNAPSHOT.</description>
    <executable>"%BASE%\run.bat"</executable>
    <arguments>-c %LOCALAPPDATA%\ComiXed\ -L %LOCALAPPDATA%\ComiXed\logs</arguments>
    <logpath>%LOCALAPPDATA%\ComiXed\logs</logpath>
    <log mode="roll-by-time">
        <pattern>yyyyMMdd</pattern>
    </log>
    <shutdown>graceful</shutdown>
</service>
